<%= render "logo" %>

<style>
  ul li {
    display: inline-block;
    padding-right: 10px;
    padding-left: 10px;
  }

  ul li > * {
    width: 170px;
  }
</style>


<%= link_to "Back", :back, class: "book nolink" %>

<br></br>

<div class="mainbox">
  <div class="mainformbox" style="overflow: hidden;">
    <div class="ticketformtitle">
      <p class="XXLfont book lopad">Provision Tag</p>
    </div>

    <div class="ticketform">
      <%= form_with model: provision_tag do |form| %>
        <ul>
          <li>
            <strong><%= form.label :version %></strong>
            <%= form.select :version, ['6.7', '6.8', '6.9', '6.10'] %>
          </li>
          <br></br>
  
          <li>
          <div class="form-check">
            <%= form.check_box :contentview %>
            <strong><%= form.label :contentview %></strong>
          </div>
          </li>
          <br></br>

          <li>
          <div class="form-check">
            <%= form.check_box :capsule %>
            <strong><%= form.label :capsule %></strong>
          </div>
          </li>

          <li>
          <div class="form-check">
            <%= form.check_box :http %>
            <strong><%= form.label :http %></strong>
          </div>
          </li>
          <br></br>

          <li>
          <div class="form-check">
            <%= form.check_box :ui %>
            <strong><%= form.label :ui %></strong>
          </div>
          </li>
  
          <li>
          <div class="form-check">
            <%= form.check_box :pxe %>
            <strong><%= form.label :pxe %></strong>
          </div>
          </li>
          <br></br>
  
          <li>
          <div class="form-check">
            <%= form.check_box :bootstrap %>
            <strong><%= form.label :bootstrap %></strong>
          </div>
          </li>
  
          <li>
          <div class="form-check">
            <%= form.check_box :kickstart %>
            <strong><%= form.label :kickstart %></strong>
          </div>
          </li>
          <br></br>
  
          <li>
          <div class="form-check">
            <%= form.check_box :discover %>
            <strong><%= form.label :discover %></strong>
          </div>
          </li>

          <li>
          <div class="form-check">
            <%= form.check_box :image %>
            <strong><%= form.label :image %></strong>
          </div>
          </li>
          <br></br>
  
          <li>
          <div class="form-check">
            <%= form.check_box :compute %>
            <strong><%= form.label :compute %></strong>
          </div>
          </li>
  
          <li>
          <div class="form-check">
            <%= form.check_box :notes %>
            <strong><%= form.label :notes %></strong>
          </div>
          </li>
          <br></br>
  
          <li>
          <div class="form-check">
            <%= form.check_box :bootdisk %>
            <strong><%= form.label :bootdisk %></strong>
          </div>
          </li>
  
          <li>
          <div class="form-check">
            <%= form.check_box :ipxe %>
            <strong><%= form.label :ipxe %></strong>
          </div>
          </li>
          <br></br>
 
          <%= form.hidden_field :provision_taggable_id, value: provision_taggable_id %>
          <%= form.hidden_field :provision_taggable_type, value: provision_taggable_type %>

          <li>
            <%= form.submit class: "form-submit-button" %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
