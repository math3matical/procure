<%= render "logo" %>
<% id ||= params[:id] %>
<strong><%= link_to "Back", :back, class: "nolink" %></strong>
<br></br>

<div class="mainbox">
  <div class="mainformbox">
    <div class="ticketformtitle"> 
      <div class="whiteheadtitle">
        <p class="XXLfont book lopad">User Solutions</p>
      </div>
    </div> 

    <div class="ticketform">
      <ul class="form">
        <%= form_tag("/test/solution_user", method: :get) do %>
          <strong><%= label_tag "User RHN Name" %></strong><br>
          <textfield class="field"><%= text_field_tag(:solution_number, params[:solution_number], size: 22) %></textfield>
          <p class="linebreaker"></p>
          <strong><%= label_tag "Search word" %></strong><br>
          <textfield class="field"><%= text_field_tag(:solution_search, params[:solution_search], size: 22) %></textfield>
          <br></br>
          <%= button_tag "Search", class: "form-search-button" %>
        <% end %>
      </ul>
    </div> 
  </div>
</div>
