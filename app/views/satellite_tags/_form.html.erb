<%= render "logo" %>

<style>
  ul {
    width: 550px;
  }
  ul li {
    width: 325;
    display: inline-block;
    padding-right: 10px;
    padding-left: 10px;
  }
  ul li > * {
    width: 175px;
  }
</style>

<strong><%= link_to "Back", :back, class: "nolink" %></strong>
<br></br>

<div class="mainbox">
  <div class="mainformbox" style="overflow: hidden;">
    <div class="ticketformtitle">
      <p class="XXLfont book lopad">Satellite Tag</p>
    </div>
    <p class="linebreak"></p>
    <div class="ticketform">
      <%= form_with model: satellite_tag do |form| %>
        <ul>
          <% list = [:pulp, :postgres, :foreman_proxy, :installer, :publish, :promote, :contentview, :capsule, :sync, :repository, :metadata, :mongo, :redis, :puma, :http, :reports, :ui] %>
          <li>
            <strong><%= form.label :version %></strong>
            <%= form.select :version, ['6.7', '6.8', '6.9', '6.10'] %>
          </li>
          <br></br>
          <% counter = 0 %>
          <% list.each do |key|  %>
            <li>
              <div class="form-check">
                <%= form.check_box key %>
                <strong><%= form.label key %></strong>
                <% counter +=1 %>
              </div>
            </li>
            <% if counter % 2 == 0 %>
              <br></br>
            <% end %>
          <% end %>
          <br></br>
          <%= form.hidden_field :satellite_taggable_id, value: satellite_taggable_id %>
          <%= form.hidden_field :satellite_taggable_type, value: satellite_taggable_type %>
          <li>
            <%= form.submit class: "form-submit-button" %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
