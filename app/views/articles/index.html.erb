<%= render 'headerlink' %>

<div class="mainbox">
  <div class="testsubbox">
    <div class="boxsubheader">
      <div class="whiteheadsubtitle">
        <p class="lopad XXLfont"><strong>Articles</strong></p>
        <p class="lopad Mfont book">
          <%= link_to "New", "/articles/new", class: "nolink" %> |
          <%= link_to "Sort", "/articles/?sort=true", class: "nolink" %> |
          <%= button_tag 'Filter', {type: 'button', id: "button-filter", style: "font-weight: bold; margin: 5px 5px 0 0; font-size:12px; background: none; border: none; padding: 0; margin-right: 0"} %>
          <%= link_to "x", "/test/removefilter", style: "border: 2px solid black; border-radius: 2px; background: #dddddd; margin-left: 0; padding: 0 3px 0 3px; display: inline;" %>
        </p>
      </div>
      <%= render 'filterform' %>
      <%= render 'searchform', ticket: 'articles', path: 'articles' %>
      <br>
    </div>
  </div>
  <br>

  <div class="testbox">
    <div class="box80">
      <div class="whitebox">
        <ol>
          <% @articles.each do |article| %>
            <% unless article.archived? %>
              <li>
                <p class="book"> <%= link_to article.title, article, class: "nolink" %> </p>
              </li>
            <% end %>
          <% end %>
        </ol>
      </div>
    </div>
  </div>
</div>
